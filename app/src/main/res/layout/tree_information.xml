<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:padding="15dp">

    <ImageView
        android:id="@+id/icon_cay"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/vang"/>

    <ImageView
        android:id="@+id/luong_nuoc"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/doctor_bag"/>

    <ImageView
        android:id="@+id/tuoi_cay"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/binh_nuoc"/>

    <ImageView
        android:id="@+id/khoang_cach"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/khoang_cach"/>

    <ImageView
        android:id="@+id/tan_suat"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/tan_suat"/>

    <ImageView
        android:id="@+id/thong_tin"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/thong_tin"/>

</LinearLayout>